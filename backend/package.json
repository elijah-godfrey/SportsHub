    "ioredis": "^5.4.1",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "uuid": "^10.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "@types/simple-peer": "^9.11.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.0.0",
    "prisma": "^6.15.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
